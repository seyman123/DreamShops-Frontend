{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "headers": {
        "cache-control": "s-maxage=31536000,immutable"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "REACT_APP_API_URL": "https://e-commerceproject-7f8i.onrender.com/api/v1"
  },
  "build": {
    "env": {
      "REACT_APP_API_URL": "https://e-commerceproject-7f8i.onrender.com/api/v1",
      "REACT_APP_CACHE_ENABLED": "true",
      "REACT_APP_IMAGE_OPTIMIZATION": "true"
    }
  }
} 